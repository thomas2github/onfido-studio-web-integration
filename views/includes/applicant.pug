// Modal Select Applicant
#selectApplicant.modal.fade(tabindex='-1')
    .modal-dialog.modal-lg
        .modal-content
            .modal-header
                h4.text-primary.font-weight-bold.modal-title Select applicant
                button.close(type='button' data-dismiss='modal')
                    span &times;
            .modal-body
                form#applicantsTotDelete(action='/applicants/delete' method='post')
                    //- TODO: manage pagination
                    table.table(style='font-size: 0.7rem;')
                        thead
                            tr
                                th 
                                    small Firstname
                                th 
                                    small Lastname
                                th
                                    small Id
                                th 
                                    small Created at
                                //- th.text-center
                                //-     button#deleteSelectedApplicants.btn.btn-sm.btn-outline-danger(type="submit")
                                //-         i.material-icons.text-danger delete
                                //-     input#switchAll.ml-2(type='checkbox')
                        tbody
                            if applicants
                                - var currentId = (applicant)?applicant.id:null;
                                each applicant in applicants
                                    if applicant.id != currentId
                                        tr
                                            td= applicant.firstName
                                            td= applicant.lastName
                                            td
                                                a(href='/applicants/'+applicant.id)
                                                    .text-primary= applicant.id
                                            td 
                                                +displayDate(applicant.createdAt)
                                            //- td.text-center
                                            //-     input(type='checkbox' name='applicantsToDelete' value=applicant.id)

// Modal Create Applicant
#createApplicant.modal.fade(tabindex='-1')
    .modal-dialog
        .modal-content
            .modal-header
                h4.text-primary.font-weight-bold.modal-title create applicant
                button.close(type='button' data-dismiss='modal')
                    span &times;
            form#applicant(action='/applicants/new' method='post')
                .modal-body
                    .form-group
                        label.bmd-label-floating Firstname
                        input#firstname.form-control(type='text' name='firstname')
                    .form-group
                        label.bmd-label-floating Lastname
                        input#lastname.form-control(type='text' name='lastname')
                .modal-footer
                    button.btn.btn-outline-secondary(type='button' data-dismiss='modal') Cancel
                    button.btn.btn-success(type='submit' value='applicant') Create

