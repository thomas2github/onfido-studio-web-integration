extends layout

append head
    link(href='https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css' rel='stylesheet')
    // Onfido SDK CSS
    link(rel='stylesheet' href='/dist/style.css')

block content
    .d-flex.flex-column
        .d-flex.flex-row.justify-content-around
            a.btn.btn-outline-secondary.py-4.mx-4(href='/sdk') Capture (SDK)
            - var canWeAuthenticate = (photos.length > 0 || videos.length > 0)
            if canWeAuthenticate
                a.btn.btn-outline-secondary.py-4.mx-4(href='/authenticate') Authenthicate (SDK)
            - var hasSomethingToVerify = (documents.length > 0 || photos.length > 0 || videos.length > 0)
            //- if hasSomethingToVerify
            if true
                a.btn.btn-outline-secondary.py-4.mx-4(href='/checks/new') Verify (API)
            a.btn.btn-outline-secondary.py-4.mx-4(href='/checks') Consult checks
            a.btn.btn-warning.py-4.mx-4(href='/orchestration') Orchestration

        .d-flex.flex-row.justify-content-center.align-items-center.mt-3
            h6 ex1: c74519ed-6b8e-4ab8-943f-a1ab7b259078 (DOC CAPTURE + DOC REPORT)
            h6 ex2: 3ee5ff08-4c34-4213-811f-b28595f7b4c3 (DOC CAPTURE + SELFIE CAPTURE + FACIAL SIMILARITY FULLY AUTO REPORT)
        .d-flex.flex-row.justify-content-center.align-items-center.mt-3
            form(action='/orchestration' method='post')
                .form-group
                    label.bmd-label-floating Workflow ID
                    input#workflowId.form-control(type='text' name='workflowId')
                button#dislpaySdk.btn.btn-info.m-4(type='submit') Run Workflow
        .d-flex.flex-row.justify-content-around
            #onfido-mount.my-4

append bottom
    script(src='/dist/onfido.min.js')
    script(src='https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js')
    