extends layout

block content
    .d-flex.flex-column
        .d-flex.flex-row.justify-content-around
            a.btn.btn-outline-secondary.py-4.mx-4(href='/sdk') Capture (SDK)
            - var canWeAuthenticate = (photos.length > 0 || videos.length > 0)
            if canWeAuthenticate
                a.btn.btn-outline-secondary.py-4.mx-4(href='/authenticate') Authenthicate (SDK)
            - var hasSomethingToVerify = (documents.length > 0 || photos.length > 0 || videos.length > 0)
            //- if hasSomethingToVerify
            if true
                a.btn.btn-outline-secondary.py-4.mx-4(href='/checks/new') Verify (API)
            a.btn.py-4.mx-4(href='/checks') Consult checks
        .d-flex.flex-row.justify-content-around.mt-4
            table.table(style='font-size: 0.8rem;')
                thead
                    tr
                        th 
                            small ID
                        th 
                            small CREATION DATE
                        th 
                            small STATUS
                        th 
                            small RESULT
                        th 
                            small REPORTS
                if checks
                    each check in checks
                        tbody
                            tr
                                td
                                    a.text-info(href='/checks/'+check.id)= check.id
                                td 
                                    +displayDate(check.created_at)
                                td
                                    +displayStatus(check.status)
                                td
                                    +displayResult(check.result)
                                td
                                    each report in check.reports
                                        small.mr-2= report.name
                                        if report.sub_result
                                            +displayResult(report.sub_result)
                                        else if report.result
                                            +displayResult(report.result)
                                        else
                                            +displayStatus(report.status)
                                        br

    