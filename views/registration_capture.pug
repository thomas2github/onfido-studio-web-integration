extends layout2

append head
    link(href='https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css' rel='stylesheet')
    // Onfido SDK CSS
    link(rel='stylesheet' href='/dist/style.css')

block content
    h1 Capture with SDK
    
    .d-flex.flex-row.justify-content-around
        #sdk-data(data-token=sdkToken data-applicant-id=applicant.id data-next-step='/usecases/explanation' data-options=usecase.options)
        #onfido-mount.my-4

    append bottom
        script(src='/dist/onfido.min.js')
        script(src='https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js')
        script(src='/javascripts/sdk.js')