extends layout

block content
    .content
        .container-fluid
            .row.justify-content-center
                .col-xl-8.col-lg-12
                    form
                        .card
                            .card-header.card-header-info
                                .float-left
                                    button.btn.btn-info.mr-4.goback &lt;
                                h4.card-title= 'Video created at '
                                    +displayDate(video.createdAt)
                                p.card-category=  video.id
                            .card-body
                                .row.justify-content-center
                                    .col-10
                                        .form-group
                                            label.bmd-label-floating File name
                                            input#fileName.form-control(type='text' disabled value=video.fileName)
                                        .form-group
                                            label.bmd-label-floating File type
                                            input#fileType.form-control(type='text' disabled value=video.fileType)
                                        .form-group
                                            label.bmd-label-floating File Size
                                            input#fileSize.form-control(type='text' disabled value=(Math.round(video.fileSize/1024) + ' Ko'))
                                        .d-flex.justify-content-around.mt-4    
                                            a.btn.btn-primary(href='/resources/videos/' + video.id + '/download' target='_blank') view full
                                            a.btn.btn-primary.ml-4(href='/resources/videos/' + video.id + '/frame' target='_blank') view frame

