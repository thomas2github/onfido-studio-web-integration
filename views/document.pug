extends layout

block content
    .content
        .container-fluid
            .row.justify-content-center
                .col-lg-6.col-md-8.col-sm-12
                    form
                        .card
                            .card-header.card-header-info
                                .float-left
                                    button.btn.btn-info.mr-4.goback &lt;
                                h4.card-title= 'Document created at '
                                    +displayDate(document.createdAt)
                                p.card-category=  document.id
                            .card-body
                                .row.justify-content-center
                                    .col-10
                                        .form-group
                                            label.bmd-label-floating Document type
                                            input#type.form-control(type='text' disabled value=document.type)
                                        .form-group
                                            label.bmd-label-floating Document side
                                            input#side.form-control(type='text' disabled value=document.side)
                                        .form-group
                                            label.bmd-label-floating Issuing country
                                            input#issuingCountry.form-control(type='text' disabled value=document.issuingCountry)
                                        .form-group
                                            label.bmd-label-floating File name
                                            input#fileName.form-control(type='text' disabled value=document.fileName)
                                        .form-group
                                            label.bmd-label-floating File type
                                            input#fileType.form-control(type='text' disabled value=document.fileType)
                                        .form-group
                                            label.bmd-label-floating File Size
                                            input#fileSize.form-control(type='text' disabled value=(Math.round(document.fileSize/1024) + ' Ko'))
                                        .d-flex.justify-content-around.mt-4
                                            a.btn.btn-primary(href='/resources/documents/' + document.id + '/download' target='_blank') view

